<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.online_games.FlyActivity">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/background"
    android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="48sp"
        android:text="Men uchaman"
        android:layout_above="@id/play"
        android:layout_below="@id/highScoreTxt"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bshlash"
        android:textSize="64sp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:id="@+id/play"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:text="High Score"
        android:id="@+id/highScoreTxt"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"/>
<androidx.constraintlayout.utils.widget.ImageFilterButton
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_alignParentBottom="true"
    android:layout_margin="16dp"
    android:id="@+id/volumeCtrl"
    android:src="@drawable/ic_twotone_volume_up_24"/>
</RelativeLayout>