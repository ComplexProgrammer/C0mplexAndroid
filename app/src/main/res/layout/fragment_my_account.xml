<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.MyAccountFragment">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="2dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eee"

                android:padding="20dp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Ism:" />

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                        />

                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Familya:" />

                    <TextView
                        android:id="@+id/last_name"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"

                         />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Otasining ismi:" />

                    <TextView
                        android:id="@+id/middle_name"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"

                        />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Role:" />

                    <TextView
                        android:id="@+id/role"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Email:" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Telefon raqami:" />

                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Login:" />

                    <TextView
                        android:id="@+id/login"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Tizimga kirishlar soni:" />

                    <TextView
                        android:id="@+id/visit_count"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Ro'yxatdan o'tgan sana:" />

                    <TextView
                        android:id="@+id/reg_date"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Ma'lumotlarni o'zgartirgan sana:" />

                    <TextView
                        android:id="@+id/change_date"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Tizimga kirish vaqti (Oxirgi):" />

                    <TextView
                        android:id="@+id/last_access_date"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                </TableRow>

                <TableRow>

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Tizimdan chiqish vaqti (Oxirgi):" />

                    <TextView
                        android:id="@+id/last_release_date"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                         />
                </TableRow>

                <TableRow

                    android:layout_marginTop="20dp">



                    <Button
                        android:id="@+id/backBtn"
                        android:layout_gravity="center_vertical"
                        android:background="#ddd"
                        android:text="Ortga"
                        android:textColor="#000"
                        android:layout_span="2"
                        android:textStyle="normal" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>